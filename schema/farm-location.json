{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/andrejellema/GlobalCoffeeDataStandard/master/schema/farm-location.json",
  "title": "The location of the farm",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "geoLocation",
    "positionTakenAt"
  ],
  "properties": {
    "geoLocation": {
      "title": "Front door geolocation",
      "$ref": "./point.json",
      "additionalProperties": false
    },
    "positionTakenAt": {
      "title": "The position was taken at ..",
      "type": "string",
      "enum": [
        "Location of the front door of the head office"
      ]
    }
  }
}